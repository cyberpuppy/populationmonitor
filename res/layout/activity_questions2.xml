<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questions2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.d.populationmonitor.questions2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edittext_name"
             />

        <TextView
            android:text="who is the head of the house hold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_p00"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edittext_p00"/>
        <TextView
            android:text="What is your relationship with the head of the household?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_p10"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edittext_p10"
            android:inputType="none" />
        <TextView
            android:text="What is your gender?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_p11"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:id="@+id/edittext_p11"/>
         <TextView
             android:text="What is your age?"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/textview_p12"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/edittext_p12"/>
        <TextView
            android:text="Are you a usual member of this household?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_p14"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edittext_p14"/>
        <TextView
            android:text="What is your tribe or nationality?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_p15"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:id="@+id/edittext_p15"/>
        <TextView
            android:text="What is your religion?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_p16"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_16"/>
        <TextView
            android:text="What is your marital status?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_p17"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_p17"
            android:inputType="none"/>
        <TextView
            android:text="Where wer you born?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_p18"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_p18"/>
        <TextView
            android:text="Where were you living in August 2016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_p19"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_p19"/>
        <TextView
            android:text="When did you move to your current location?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_p20"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:id="@+id/edittext_p20"/>
        <TextView
            android:text="Is your father alive?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_p22"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Edittext_p22"/>
        <TextView
            android:text="Is your mother alive?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_p23"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_p23" />
    </LinearLayout>
</RelativeLayout>
</ScrollView>